$green-500 = hsl(158, 36%, 37%)
$green-700 = hsl(158, 42%, 18%)
black =  hsl(212, 21%, 14%)
grey = hsl(228, 12%, 48%)
cream = hsl(30, 38%, 92%)
white = hsl(0, 0%, 100%)

vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    {prop} args

body
  min-height: 100vh
  padding 0
  margin 0
  background-color cream
  display flex
  align-items center
  justify-content center
  font-size 1em
  font-family 'Montserrat', sans-serif

main
    display flex
    flex-direction column
    width 18rem
    margin-block-end 3rem
    margin-block-start 3rem
    overflow hidden
    vendor('border-radius', 0.5rem)
    
    @media (min-width: 768px)
        flex-direction row
        width 40rem
    
    picture
        height 100%

        @media (min-width: 768px)
            width 50%

        img
            display block
            width 100%
            height 100%
            object-fit contain
            object-position center
    
    .product-details
        display flex
        flex-direction column
        gap 1rem
        padding 1rem
        background-color white
        
        @media (min-width: 768px)
            width 50%
            padding 1.8rem
            gap 1.5rem

        .product-type
            text-transform uppercase
            letter-spacing 0.3em
            font-size 0.8em
            font-family 'Montserrat', sans-serif
            color grey
            margin 0

        h1
            font-family 'Fraunces', serif
            font-weight 700
            font-size 1.8em
            color black
            margin 0

            @media (min-width: 768px)
                font-size 2.5em
                line-height 1

        .product-description
            color grey
            font-size 0.9em
            line-height 1.2
            margin 0
            font-weight 500

            @media (min-width: 768px)
                font-size 1em
                line-height 1.2
                
        .price-details
            display flex
            flex-direction row
            align-items center
            gap 1rem

            .current-price
                font-family 'Fraunces', serif
                font-size 1.8rem
                line-height 1.5rem
                color $green-500
                font-weight 700

            .original-price
                font-size 0.7em
                font-weight 500
                color grey
        
        button.add-to-cart-btn
            display flex
            align-items center
            justify-content center
            gap 0.5rem
            padding 0.8rem 1rem
            font-size 0.8em
            line-height 1em
            font-weight 500
            font-family 'Montserrat', sans-serif
            color white
            background-color $green-500
            border none
            cursor pointer
            margin 0
            vendor(border-radius, 0.5rem)

            &:hover
                background-color $green-700

            &:focus
                outline 0.15em solid $green-700
                outline-offset 0.15em